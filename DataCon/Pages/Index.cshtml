@page
@model DataCon.Pages.IndexModel
@{
    ViewData["Title"] = "Bank Account Management";
}

<div style="border: 5px solid black; padding: 20px; max-width: 500px; margin: auto;">
    <h2 style="text-align: left;">Welcome, John Smith!</h2>
    
    <div style="display: flex; align-items: center; margin-bottom: 10px;">
        <label for="account" style="flex: 1;">Account:</label>
        <select id="account" name="SelectedAccount" asp-for="SelectedAccount" style="width: 100px;" onchange="this.form.submit()">
            <option value="Account1">1234</option>
        </select>
    </div>

    <div style="display: flex; align-items: center; margin-bottom: 10px; margin-right: 10px;">
        <label for="balance" style="flex: 1;">BALANCE:</label>
        <span id="balance">
            @Model.Account1.Balance.ToString("C")
        </span>
    </div>

    <div style="border: 2px solid black; padding: 20px; margin-top: 20px;">
        <form method="post">
            <div style="display: flex; align-items: center; margin-bottom: 10px;">
                <label for="amount" style="flex: 1;">Amount:</label>
                <input type="number" id="amount" name="Amount" value="1000" asp-for="Amount" style="flex: 2; width: 100px; margin-right: 10px;" />
                <select id="currency" name="Currency" asp-for="Currency" style="width: 80px;">
                    <option value="CAD">CAD</option>
                    <option value="USD">USD</option>
                    <option value="MXN">MXN</option>
                    <option value="EURO">EURO</option>
                </select>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <button type="submit" asp-page-handler="Withdraw" style="width: 120px; padding: 10px; border-radius: 5px; font-weight: bold;">WITHDRAW</button>
                <button type="submit" asp-page-handler="Deposit" style="width: 120px; padding: 10px; border-radius: 5px; font-weight: bold;">DEPOSIT</button>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color: red; margin-top: 20px;">
            <strong>@Model.ErrorMessage</strong>
        </div>
    }
</div>
